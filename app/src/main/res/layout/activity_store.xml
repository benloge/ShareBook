<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_toolbar"></include>
    <include layout="@layout/bottom_toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="?actionBarSize"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/store_nouveaute"
                android:text="Nouveaute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/keepcalm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/store_nouveauteView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/welcome"
                android:background="@drawable/back"
                >

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/genre"
                android:text="Genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/keepcalm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/store_genreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/back"
                >

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/store_tendance"
                android:text="Tendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/keepcalm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/store_tendanceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/store_endance"
                android:background="@drawable/back"
                >

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/store_type"
                android:text="Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/keepcalm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/store_typeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/back"
                />

            <TextView
                android:id="@+id/store_auteur"
                android:text="Auteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/keepcalm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/store_auteurView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/back"
                />


        </TableLayout>

    </ScrollView>


</FrameLayout>