<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.CategorieActivity">

    <include layout="@layout/top_toolbar"></include>
    <include layout="@layout/bottom_toolbar"></include>



    <TableLayout
        android:id="@+id/Categorie_TableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="?actionBarSize"

        >

    <TextView
        android:id="@+id/Categorie_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/keepcalm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        >

    </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categorie_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </TableLayout>


</RelativeLayout>