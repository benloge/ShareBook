<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.sharebookstore.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShareBook"
        android:usesCleartextTraffic="true">
        <activity android:name=".controller.ProductActivity"></activity>
        <activity android:name=".controller.LoginActivity" ></activity>
        <activity android:name=".controller.CompteActivity" ></activity>
        <activity android:name=".controller.PanierActivity" ></activity>
        <activity android:name=".controller.BiblioActivity" ></activity>
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>